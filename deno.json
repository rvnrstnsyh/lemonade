{
	"nodeModulesDir": "auto",
	"deploy": { "project": "lemonade", "exclude": ["**/node_modules"], "include": [], "entrypoint": "main.ts" },
	"tasks": {
		"check": "deno run --allow-read --allow-write --allow-run .scripts/check.ts",
		"compile": "deno compile --output lemonade --include _dist -A _dist/compiled-entry.js",
		"dev": "vite",
		"build": "vite build",
		"start": "deno serve -A _dist/server.js",
		"update": "deno run -A -r jsr:@fresh/update .",
		"db:generate": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts generate",
		"db:migrate": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts migrate",
		"db:push": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts push",
		"db:pull": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts pull",
		"db:export": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts export",
		"db:check": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts check",
		"db:up": "deno --env -A --node-modules-dir npm:drizzle-kit --config=drizzle.config.ts up",
		"key:rotate": "deno run --allow-read --allow-write .scripts/key-manager.ts rotate",
		"key:list": "deno run --allow-read --allow-write .scripts/key-manager.ts list"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": ["a", "img", "source", "body", "html", "head", "title", "meta", "script", "link", "style", "base", "noscript", "template"],
		"types": ["vite/client"]
	},
	"lint": {
		"include": ["**/*.ts", "**/.*/**/*.ts", "**/*.tsx", "**/.*/**/*.tsx", ".scripts/**/*.ts"],
		"exclude": ["**/*build/*", "**/*dist/*", "**/*fresh/*", "**/*.hbs"],
		"rules": {
			"tags": ["recommended", "fresh"],
			"include": ["no-console", "no-unused-vars", "no-explicit-any", "no-non-null-assertion", "ban-untagged-todo"],
			"exclude": []
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 170,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["**/*.ts", "**/.*/**/*.ts", "**/*.tsx", "**/.*/**/*.tsx", ".scripts/**/*.ts"],
		"exclude": ["**/*build/*", "**/*dist/*", "**/*fresh/*", "**/*.hbs"]
	},
	"exclude": ["**/*build/*", "**/*dist/*", "**/*fresh/*", "**/_fresh/*"],
	"imports": {
		"@/": "./",
		"@fresh/core": "jsr:@fresh/core@^2.2.0",
		"@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
		"@preact/signals": "npm:@preact/signals@^2.5.0",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.17",
		"@types/pg": "npm:@types/pg@^8.15.6",
		"$std/": "https://deno.land/std@0.224.0/",
		"axios": "npm:axios@^1.13.2",
		"drizzle-kit": "npm:drizzle-kit@^0.31.7",
		"drizzle-orm": "npm:drizzle-orm@^0.44.7",
		"fresh": "jsr:@fresh/core@^2.2.0",
		"pg": "npm:pg@^8.16.3",
		"preact": "npm:preact@^10.27.2",
		"tailwindcss": "npm:tailwindcss@^4.1.17",
		"uuid": "npm:uuid@^13.0.0",
		"vite": "npm:vite@^7.2.2",
		"zod": "npm:zod@^4.1.12"
	}
}
